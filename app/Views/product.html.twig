<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
<table style="border-width: 1px; border-color: black; border-style: solid">
    <tr>
        <th>Product name</th>
        <th>Product category</th>
        <th>Product quantity</th>
        <th>Tags</th>
        <th>Product creation date</th>

    </tr>
    {% for product in products.getproducts %}
    <tr>
        <th>{{ product.productname }}</th>
        <th> {{ product.category }}</th>
        <th> {{ product.qty }}</th>
        <th> {% for tag in tags %}
                {% if  tag.getProductId == product.getId %}
                    {{ tag.getTagId }}

                {% endif %}
            {% endfor %}
        </th>
        <th>{{ product.adddate }}</th>
    </tr>
    <form method="post" action="/edit">
        <tr>
            <th><input type="text" value="{{ product.productName }}" name="productName"></th>
            <th><select name="category" required>
                    <option selected="selected">{{ product.category }}</option>
                    <option value="a">a</option>
                    <option value="b">b</option>
                    <option value="c">c</option>
                    <option value="d">d</option>
                </select></th>
            <th><input type="number" name="qty" required value="{{ product.qty }}"></th>
            <th>
                <label for="x">X</label>
                <input type="checkbox" name="tags" value="X">
                <label for="y">Y</label>
                <input type="checkbox" name="tags" value="Y">
                <label for="z">Z</label>
                <input type="checkbox" name="tags" value="Z">
            </th>
            <th>
                <button type="submit" name="id" value="{{ product.getId }}">Edit Product</button>

            </th>
        </tr>

    </form>
</table>
{% for error in editionErrors %}
    <p style="color: red"> {{ error }}</p>
{% endfor %}

<br><br>


<form method="post" action="/delete">
    <button type="submit" name="id" value="{{ product.getId }}">Delete Product</button>
</form>
{% endfor %}

</body>
</html>