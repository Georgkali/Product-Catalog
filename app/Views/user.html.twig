<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Product Catalog v1.0</title>


</head>
<body>

<form method="post" action="/logout">
    <button type="submit">Logout</button>
</form>
<br>

<form method="post" action="/addProduct">

    <label for="name">Product name</label>
    <input type="text" name="productName" required>
    <label for="name">Quantity</label>
    <input type="number" name="qty" required>
    <label for="name">Category</label>
    <select name="category" required>
        <option value="a">a</option>
        <option value="b">b</option>
        <option value="c">c</option>
        <option value="d">d</option>
    </select>
    <label>Tags</label>
    <label for="x">X</label>
    <input type="checkbox" name="tags[]" value="X">
    <label for="y">Y</label>
    <input type="checkbox" name="tags[]" value="Y">
    <label for="z">Z</label>
    <input type="checkbox" name="tags[]" value="Z">

    <button type="submit">Add product</button>
</form>
<br>
<table style="border-width: 1px; border-color: black; border-style: solid">
    <tr>
        <th>Product name</th>
        <th>Product category</th>
        <th>Product quantity</th>
        <th>Tags</th>
        <th>Product creation date</th>
        <th>Product last edit date</th>
    </tr>
    {% for product in products %}
        <tr>
            <th><a href="{{ product.getId }}">{{ product.productname }}</a></th>
            <th> {{ product.category }}</th>
            <th> {{ product.qty }}</th>
            <th>

                {% for tag in tags %}
                    {% if  tag.getProductId == product.getId %}
                        {{ tag.getTagId }}

                    {% endif %}
                {% endfor %}


            </th>
            <th>{{ product.adddate }}</th>
            <th>{{ product.lasteditdate }}</th>
        </tr>
    {% endfor %}
    <tr>
        <th>Search by category</th>
        <form method="post" action="/searchByCategory">
            <th><select name="category" required>
                    <option value="a">a</option>
                    <option value="b">b</option>
                    <option value="c">c</option>
                    <option value="d">d</option>
                </select></th>
            <th>
                <button type="submit">Search</button>
            </th>
        </form>

        <th></th>
    </tr>
</table>


</form>



</body>
</html>